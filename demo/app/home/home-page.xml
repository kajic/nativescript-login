<Page
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Home"></Label>
    </ActionBar>

    <GridLayout rows="*" columns="*">
        <GridLayout rows="auto" columns="*, *, *">
            <Button col="0" text="Google Sign In" tap="{{ googleSignIn }}"/>
            <Button col="1" text="Facebook Login" tap="{{ facebookLogin }}"/>
            <Button col="2" text="Sign In with Apple" tap="{{ signInWithApple }}"/>
        </GridLayout>
    </GridLayout>
</Page>
